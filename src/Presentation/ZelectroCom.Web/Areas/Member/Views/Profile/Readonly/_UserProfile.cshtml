@model ZelectroCom.Web.Areas.Member.ViewModels.Profile.UserProfileVm

<div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2">
        <div class="avatar_view js-avatarContainer">
            <img src="@Url.Action("GetAvatar","UserProfile")" class="img-thumbnail bs-uploadImage" style="width:115px;height:115px;" />
            <div class="avatar_controls">
                <div class="btn btn-theme file-upload">
                    <span class="glyphicon glyphicon-plus"></span>
                    <input type="file" />

                </div>
                <button class="btn btn-danger pull-right bs-deleteImage" role="button"><span class="glyphicon glyphicon-minus"></span></button>
            </div>
        </div>
    </div>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-2 control-label">Ник:</label>
                <div class="col-sm-10">
                    <p class="form-control-static js-nickName">@Model.Nickname</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Имя:</label>
                <div class="col-sm-10">
                    <p class="form-control-static js-fullName">@Model.FullName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">О себе:</label>
                <div class="col-sm-10">
                    <p class="form-control-static js-descr">@Model.Description</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Рейтинг:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">228</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Награды:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">Заглушка</p>
                </div>
            </div>
        </form>
    </div>
</div>