@model ZelectroCom.Web.Areas.Member.ViewModels.Profile.EditableUserDataVm

@using BForms.Html
@using BForms.Models
@using ZelectroCom.Web.Infrastructure


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @using (Html.BsBeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "userinfoeditable" }, Html.GetTheme()))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.BsLabelFor(m => m.Nickname, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsInputFor(m => m.Nickname)
                        @Html.BsValidationFor(m => m.Nickname)

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.Firstname, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.User)
                        @Html.BsInputFor(m => m.Firstname)
                        @Html.BsValidationFor(m => m.Firstname)

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.Lastname, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.User)
                        @Html.BsInputFor(m => m.Lastname)
                        @Html.BsValidationFor(m => m.Lastname)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.Description, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsInputFor(m => m.Description)
                        @Html.BsValidationFor(m => m.Description)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-theme bs-savePanel">Save</button>
                    <button type="submit" class="btn btn-danger pull-right bs-cancelEdit">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>