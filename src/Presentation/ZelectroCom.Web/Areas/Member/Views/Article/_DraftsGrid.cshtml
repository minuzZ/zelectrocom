
@model ZelectroCom.Web.Areas.Member.ViewModels.Article.DraftListVm
@using BForms.Html
@using BForms.Grid
@using ZelectroCom.Web.Areas.Member.ViewModels.Article

@(
 Html.BsGridFor(m => m.Grid)
     .ConfigureColumns(cols =>
     {
         cols.For(row => row.Action).Name("").Text(RowButtonTemplate);
         cols.For(row => row.Action).HtmlAttributes(new {@class = "actionCol"});
     })
     .PagerSettings(new BsPagerSettings
    {
        Size = 10,
        ShowFirstLastButtons = true,
        ShowPrevNextButtons = true,
        HasPagesText = true,
        HasPageSizeSelector = false
    })
)

@helper RowButtonTemplate(DraftRowVm row)
{
    <a href="#" class="js-btn_delete js-inlineAction"><span class="glyphicon glyphicon-trash"></span></a>
}