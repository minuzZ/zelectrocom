@using BForms.Html
@model ZelectroCom.Web.Areas.Member.ViewModels.Article.DraftListVm
@{
    ViewBag.Title = "Черновики";
    Layout = "~/Areas/Member/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>
            Черновики <small>Список ваших черновиков</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-pencil"></i> Черновики</li>
        </ol>
    </div>
</div>

<br/>

@using (Html.BeginForm("Draft", "Article", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-xs-12">
            <input type="submit" class="btn btn-default" value="Добавить черновик" />
        </div>
    </div>
}

@using (Html.BsGridWrapper())
{
    @Html.AntiForgeryToken()
    @Html.Partial("_DraftsGrid", Model)
}
