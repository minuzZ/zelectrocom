@using BForms.Html
@model ZelectroCom.Web.Areas.Member.ViewModels.OldMedia.OldMediaListVm
@{
    ViewBag.Title = "Переадресация старых файлов";
    Layout = "~/Areas/Member/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>
            Переадресация <small>файлов orchard блога</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-file-image-o"></i> Переадресация файлов</li>
        </ol>
    </div>
</div>


@using (Html.BeginForm("ImportCsv", "OldMedia", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <span class="btn btn-default btn-file"><input type="file" name="file" /></span>
    <span class="fileinput-filename"></span>
    <input type="submit" class="btn btn-default" value="Импорт из csv" />
}
<span>@Html.ActionLink("Экспорт в csv", "ExportCsv", null, new { @class = "btn btn-default" })</span>

@using (Html.BsGridWrapper())
{
    @Html.AntiForgeryToken()
    @Html.Partial("_OldMediaGrid", Model)
}