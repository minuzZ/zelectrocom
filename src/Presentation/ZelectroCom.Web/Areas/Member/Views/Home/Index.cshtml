@{
    ViewBag.Title = "Главная";
    Layout = "~/Areas/Member/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Личный кабинет <small>Добро пожаловать!</small></h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-briefcase"></i> Личный кабинет</li>
        </ol>
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            Развиваем Zelectro вместе! Делитесь вашими идеями и опытом с участниками сообщества. Бонусы и подарки авторам!
        </div>
    </div>
</div><!-- /.row -->

<div class="row">
    <div class="col-lg-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <i class="fa fa-beer fa-5x"></i>
                    </div>
                    <div class="col-xs-6 text-right">
                        <h3>Бонусы</h3>
                        <p class="announcement-text">Подарки и скидки авторам!</p>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer announcement-bottom">
                    <div class="row">
                        <div class="col-xs-6">
                            Узнать подробнее
                        </div>
                        <div class="col-xs-6 text-right">
                            <i class="fa fa-arrow-circle-right"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <i class="fa fa-question fa-5x"></i>
                    </div>
                    <div class="col-xs-6 text-right">
                        <h3>Помощь</h3>
                        <p class="announcement-text">Инструкции и шаблоны статей</p>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer announcement-bottom">
                    <div class="row">
                        <div class="col-xs-6">
                            Перейти к справке
                        </div>
                        <div class="col-xs-6 text-right">
                            <i class="fa fa-arrow-circle-right"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <i class="fa fa-plus fa-5x"></i>
                    </div>
                    <div class="col-xs-6 text-right">
                        <h3>Добавить</h3>
                        <p class="announcement-text">Черновик новой статьи</p>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer announcement-bottom">
                    <div class="row">
                        <div class="col-xs-6">
                            Создать черновик!
                        </div>
                        <div class="col-xs-6 text-right">
                            <i class="fa fa-arrow-circle-right"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div><!-- /.row -->

