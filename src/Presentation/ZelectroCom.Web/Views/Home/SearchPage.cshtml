@model ZelectroCom.Web.ViewModels.Search.SearchVm

@{
    ViewBag.Title = ViewBag.PageTitle = "Поиск";
}

@section Meta {
    <meta name="robots" content="noindex">
}

@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <div class="input-group">
        @Html.TextBoxFor(x => x.SearchText, new {@class = "form-control"})
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </div>
    <p><i style="cursor:pointer" onclick="$('#answerText').toggle()">А как же расширенный поиск?</i></p>
    <p style="display:none" id="answerText">В данный момент еще реализованы не все элементы нашего сообщества. 
    Мы активно работаем над ним и в ближайшее время поиск станет умнее, а также добавится возможность расширенного поиска.</p>
}