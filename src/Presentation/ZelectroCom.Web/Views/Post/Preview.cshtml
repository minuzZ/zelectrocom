@model ZelectroCom.Web.ViewModels.PreviewArticleVm

@{
    ViewBag.Title = "Предварительный просмотр статьи";
}

@section PageCss
{
    @Styles.Render("~/Content/postcss")
}

<!-- Blog Post Content Column -->
<div class="col-lg-8">
    <!-- Blog Post -->
    <!-- Title -->
    <h1>@Model.Title</h1>
    <p class="lead">
        автор: <a href="#">@Model.Author</a>
    </p>
    <hr>
    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> Опубликовано @Model.PublishTime</p>
    <hr>
    <!-- Post Content -->
    @Html.Raw(Model.Text)
    <hr>
</div>