@model ZelectroCom.Web.ViewModels.PreviewArticleVm

@{
    ViewBag.Title = "Предварительный просмотр статьи";
}

<!-- Blog Post Content Column -->
<div class="col-lg-8">
    <!-- Blog Post -->
    <!-- Title -->
    <h1>@Model.Title</h1>
    <!-- Author -->
    <p class="lead">
        by <a href="#">@Model.Author</a>
    </p>
    <hr>
    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> Posted on @Model.PublishTime</p>
    <hr>
    <!-- Post Content -->
    @Model.Text
    <hr>
</div>